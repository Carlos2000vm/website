<body>
	<h1>¿Quieres ser mi novia?</h1>
	<button id="si" onclick="mostrarAgradecimiento()">Sí</button>
	<button id="no" onclick="moverBoton()">No</button>

	<script>
		function mostrarAgradecimiento() {
			alert("Gracias por ser mi novia");
		}

		function moverBoton() {
			const botonNo = document.getElementById("no");
			const anchoPagina = window.innerWidth;
			const altoPagina = window.innerHeight;
			const nuevoX = Math.floor(Math.random() * anchoPagina);
			const nuevoY = Math.floor(Math.random() * altoPagina);
			botonNo.style.position = "absolute";
			botonNo.style.left = nuevoX + "px";
			botonNo.style.top = nuevoY + "px";
		}
	</script>
</body>
</html>
